{
  "name": "opl-whatsapp-server",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/server.js",
  "module": "./dist/server.js",
  "type": "module",
  "scripts": {
    "start": "bun run biome check && bun _build && node --env-file=.env ./dist/server.js",
    "_build": "rm -rf dist && bun ./build.ts",
    "ci": "bun install && bun run biome check && tsc --noEmit && bun _build",
    "check": "bun ci && bun check_up",
    "lint": "bun run biome check --write",
    "fix": "bun lint",
    "updates": "bun update --latest",
    "check_up": "bunx npm-check-updates -p bun --format group",
    "try": "bun _build test && node --env-file=.env ./dist/test.js",
    "update_vendors": "bun run vendor up && bun patches/index.ts"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.5",
    "cookie": "^0.6.0",
    "mongoose": "^8.5.1",
    "nanoid": "^5.0.7",
    "openai": "^4.52.7",
    "pino": "^9.2.0",
    "pino-pretty": "^11.2.1",
    "qrcode": "^1.5.3",
    "sweetalert2": "file:./vendor/sweetalert2",
    "zod": "^3.23.8"
  },
  "vendorDependencies": {
    "sweetalert2": {
      "version": "v11.12.4",
      "repository": "https://github.com/sweetalert2/sweetalert2",
      "files": [
        "{release}/sweetalert2.all.js",
        "sweetalert2.d.ts"
      ]
    }
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/bun": "^1.1.6",
    "@types/cookie": "^0.6.0",
    "@types/node": "^20.14.10",
    "@types/qrcode": "^1.5.5",
    "typescript": "^5.5.3",
    "vendorfiles": "^1.2.0"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "protobufjs"
  ]
}
